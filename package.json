{
  "name": "probot-stale",
  "version": "1.0.0",
  "description": "a GitHub Integration that closes abandoned issues after a period of inactivity",
  "author": "Brandon Keepers",
  "license": "ISC",
  "repository": "https://github.com/probot/stale",
  "scripts": {
    "start": "probot run ./index.js",
    "test": "xo --extend probot && mocha"
  },
  "dependencies": {
    "js-yaml": "^3.8.2",
    "probot": "^0.7.4",
    "probot-visitor": "^0.2"
  },
  "engines": {
    "node": "^7.7",
    "npm": "^4.0"
  },
  "devDependencies": {
    "eslint-config-probot": "^0.1.0",
    "expect": "^1.20.2",
    "localtunnel": "^1.8.3",
    "mocha": "^3.4.2",
    "xo": "^0.17.1"
  },
  "xo": {
    "overrides": [
      {
        "files": "test/**/*.js",
        "rules": {
          "max-nested-callbacks": "off",
          "prefer-arrow-callback": "off",
          "no-unused-vars": "off"
        }
      }
    ]
  }
}
